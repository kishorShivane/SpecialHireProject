        $("#lblReturnDate").html(bookingQuote.ReturnDate);
        $("#lblReturnTime").html(bookingQuote.ReturnTime);
        $("#lblFromLocation").html(bookingQuote.FromLocation);
        $("#lblToLocation").html(bookingQuote.ToLocation);
