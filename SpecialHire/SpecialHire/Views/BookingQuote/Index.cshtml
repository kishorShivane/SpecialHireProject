        $("#lblVatTax").html((parseFloat(bookingQuote.QuotationValue) * 14.5) / 100);
        $("#lblQuotationTaxValue").html(parseFloat(bookingQuote.QuotationValue) + ((parseFloat(bookingQuote.QuotationValue) * 14.5) / 100));
