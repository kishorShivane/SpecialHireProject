                for (var i = 0; i < trailers.length; i++) {
                    var itemInside = trailers[i];
                    if (item.html() == itemInside.TrailerType) {
                        count = count + 1;
                    }
                }
                if (count > 0) {
                    rows = rows + trailerRow.replace("##TrailerType##", item.html()).replace("##Quantity##", count);
