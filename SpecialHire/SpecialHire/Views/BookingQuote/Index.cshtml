        busTypes.each(function () {
            var count = 0;
            var item = $(this);
            for (var j = 0; j < vehicles.length; j++) {
                var itemInside = vehicles[j];
                if (item.html() == itemInside.BusType) {
                    count = count + 1;
                }
            }
            if (count > 0) {
                rows = rows + vehicleRow.replace("##BusType##", item.html()).replace("##Quantity##", count);
