        $("#lblEventExtraInformation").html(bookingQuote.ExtraInformation);
        $("#lblNoOfPassengers").html(bookingQuote.Passengers);
        $("img#imgCompanyLogo").attr("src","./Images/"+bookingQuote.CompanyLogo);
        $("#lblCompanyAddress").html($("#hdnCompanyNameAddress").val().replace(/\##/g,"<br>"));
